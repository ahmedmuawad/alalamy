<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/value_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/value_5"
        android:layout_marginRight="@dimen/value_5"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/value_5"
        android:layout_marginEnd="@dimen/value_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tooot.stopgroup.customview.textview.TextViewRegular
                android:id="@+id/tvRatting"
                style="@style/txt_white_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_corner_round_button"
                android:drawablePadding="@dimen/_3sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:text=""
                android:paddingStart="@dimen/_5sdp"
                app:drawableEndCompat="@drawable/ic_star_white"
                android:paddingEnd="@dimen/_5sdp" />

            <com.tooot.stopgroup.customview.textview.TextViewRegular
                android:id="@+id/tvName"
                style="@style/txt_gray_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_8"
                android:gravity="start|center"
                android:text=""
                android:textAlignment="viewStart"
                android:textDirection="locale"
                android:layout_marginStart="@dimen/value_8" />

        </LinearLayout>

        <com.tooot.stopgroup.customview.textview.TextViewRegular
            android:id="@+id/tvReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_3"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            android:text="" />

        <com.tooot.stopgroup.customview.textview.TextViewLight
            android:id="@+id/tvTime"
            style="@style/txt_gray_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_3"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            android:text="" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_0.5"
        android:layout_marginTop="@dimen/value_5"
        android:background="@color/gray_light" />

</LinearLayout>
